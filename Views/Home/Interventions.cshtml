@{
    ViewData["Title"] = "Interventions";
}

<div class="container">
    <div class="heading-title heading-dotted text-center" style="font-size: 30px;">
        <h2>Interventions</h2>
    </div>
</div>

<div class="container">
  <form>
    
    <div class="row justify-content-center text-center">
      @* <label for="Author">Author</label><br> *@
    </div>
    <div class="row justify-content-center text-center">
      <input type="hidden" id="author" name="author" value="customer_company_contact_name">
    </div>

    <div class="row justify-content-center text-center">
      @* <label for="Customer">Customer</label><br> *@
    </div>
    <div class="row justify-content-center text-center">
      <input type="hidden" id="customer" name="customer" value="customer_id">
    </div>

    <div class="row justify-content-center text-center">
      <label for="Building">Building</label><br>
    </div>
    <div class="row justify-content-center text-center">
      <select id="Building" name="Building">
        <option value="test">Test</option>
      </select>
    </div>
      
    <div class="row justify-content-center text-center">
      <label for="Battery">Battery</label><br>
    </div>
    <div class="row justify-content-center text-center">
      <select id="Battery" name="Battery">
        <option value="test">Test</option>
      </select>
    </div>
      
    <div class="row justify-content-center text-center">
      <label for="Column">Column</label><br>
    </div>
    <div class="row justify-content-center text-center">
      <select id="column" name="column">
        <option value="test">Test</option>
      </select>
    </div>
          
    <div class="row justify-content-center text-center">
      <label for="Elevator">Elevator</label><br>
    </div>
    <div class="row justify-content-center text-center">  
      <select id="elevator" name="elevator">
        <option value="test">Test</option>
      </select>
    </div>
          
    <div class="row justify-content-center text-center">      
      <label for="Employee">Employee</label><br>
    </div>
    <div class="row justify-content-center text-center">
      <select id="employee" name="employee">
        <option value="test">Test</option>
      </select>
    </div>
          
    <div class="row justify-content-center text-center">
      @* <label for="StartIntervention">StartIntervention</label><br> *@
    </div>
    <div class="row justify-content-center text-center">
      <input type="hidden" id="startintervention" name="startintervention" value="">
    </div>

    <div class="row justify-content-center text-center">
      @* <label for="EndIntervention">EndIntervention</label><br> *@
    </div>
    <div class="row justify-content-center text-center">
      <input type="hidden" id="endintervention" name="endintervention" value="">
    </div>

    <div class="row justify-content-center text-center">
      @* <label for="Result">Result</label><br> *@
    </div>
    <div class="row justify-content-center text-center">
      <input type="hidden" id="result" name="result" value="Incomplete">
    </div>

    <div class="row justify-content-center text-center">  
      <label for="Report">Report</label><br>
    </div>
    <div class="row justify-content-center text-center">
      <input type="text" id="report" name="report" width="200" height="100">
    </div>

    <div class="row justify-content-center text-center">  
      @* <label for="Status">Status</label><br> *@
    </div>
    <div class="row justify-content-center text-center">  
      <input type="hidden" id="status" name="status" value="Pending">
    </div>
    </br>
    <div class="row justify-content-center text-center">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
</div>